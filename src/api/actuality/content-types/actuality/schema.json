{
  "kind": "collectionType",
  "collectionName": "actualities",
  "info": {
    "singularName": "actuality",
    "pluralName": "actualities",
    "displayName": "Actualit√©s",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "date": {
      "type": "date",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "url": {
      "type": "string",
      "unique": true
    },
    "image_display": {
      "type": "boolean",
      "default": true
    },
    "image_side": {
      "type": "enumeration",
      "enum": [
        "Gauche",
        "Droite",
        "Haut"
      ],
      "default": "Gauche"
    },
    "components": {
      "type": "dynamiczone",
      "components": [
        "general.galerie",
        "general.damier",
        "general.contenu",
        "general.groupe-de-cartes",
        "general.image",
        "general.tableau-d-affichage",
        "general.carrousel-d-images",
        "medias.integration"
      ]
    }
  }
}
